<%= csrf_meta_tag %>
<%= javascript_tag "var AUTH_TOKEN = '#{form_authenticity_token}';" if protect_against_forgery? %>

<div tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" onclick='cancel_new_group()'>Cancel</button>
        <h4 class="modal-title">New Group</h4>
      </div>
      <div class="modal-body">
        <h3><%= text_field_tag 'Group Name', nil, :id =>'group_name' %></h3>
      </div>
      <div class="modal-footer">
        <%= link_to 'Create', 'groups', :class => "btn btn-default", id: 'create' %><br />
        <%= check_box_tag 'group', 'join', false, :name => "group_join" -%>
        <%= 'Join group' %>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag 'new_group' %>
