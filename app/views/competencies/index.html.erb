<nav class="pull-right"><%= link_to 'Create Competency', new_competency_url, class: 'btn btn-create' %></nav>

<h1>Competencies</h1>

<table class="table table-bordered table-striped table-responsive">
  <thead>
  <tr>
    <th>Name</th>
    <th>Users</th>
  </tr>
  </thead>
  <tbody>
  <% @competencies.each do |competency| %>
    <tr>
      <td><%= competency.name %></td>
      <td><%= competency.users.count %></td>
      <td><%= link_to 'Edit', edit_competency_url(competency) %></td>
      <td><%= link_to 'Delete', competency_url(competency), method: :delete,
                      data: { confirm: "Are you sure you wish to delete \"#{competency.name}\"?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>