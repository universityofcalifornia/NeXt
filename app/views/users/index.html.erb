<h2>People</h2>

<%= will_paginate @users %>

<table class="table table-stripped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Position</th>
      <th>Organization</th>
      <th>Member Since</th>
      <th>Links</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
  <tr>
    <td><%= link_to user.display_name(:lf), user_url(user) %></td>
    <td><%= user.primary_position ? user.primary_position.title : '' %></td>
    <td><%= user.primary_organization ? user.primary_organization.name : '' %></td>
    <td><%= user.created_at.strftime("%B %d, %Y") %></td>
    <td>
      <% if user.website %>
        <%= link_to 'WWW', user.website_url, target: '_blank' %>
      <% end %>
      <% if user.social_github %>
        <%= link_to 'GH', user.social_github_url, target: '_blank' %>
      <% end %>
      <% if user.social_google %>
        <%= link_to 'G+', user.social_google_url, target: '_blank' %>
      <% end %>
      <% if user.social_linkedin %>
        <%= link_to 'LI', user.social_linkedin_url, target: '_blank' %>
      <% end %>
      <% if user.social_twitter %>
        <%= link_to 'TW', user.social_twitter_url, target: '_blank' %>
      <% end %>
    </td>
  </tr>
  <% end %>
  </tbody>
</table>

<%= will_paginate @users %>