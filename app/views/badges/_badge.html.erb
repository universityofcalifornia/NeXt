<div class="badge panel panel-default">
  <div class="panel-body">
    <div class="icon">
      <%= image_tag badge.image, class: 'float-left' %>
    </div>
    <h3><%= link_to badge.name, badge_url(badge) %></h3>
    <p><%= badge.description %>
  </div>
</div>

<% if badge.is_editable_by? current_user %>
  <%= button_to 'Edit',
                edit_badge_url(badge),
                method: :get,
                class: 'btn btn-success btn-block',
                form_class: 'button_to full-width'
  %>
  <%= button_to 'Delete',
                badge_url(badge),
                method: :delete,
                class: 'btn btn-warning btn-block',
                form_class: 'button_to full-width',
                data: { confirm: 'Are you sure you want to delete this badge?' }
  %>
<% end %>
